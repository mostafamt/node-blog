<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/header') %>
  <body>
    <%- include('layouts/navbar') %>
    <!-- Page Header-->
    <header
      class="masthead"
      style="background-image: url('/assets/img/post.jpg')"
    >
      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="page-heading">
              <h1>Create New Post</h1>
              <span class="subheading"
                >To inspire the audience with new ideas.</span
              >
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Main Content-->
    <main class="mb-4">
      <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="my-5">
              <ul class="list-group">
                <% for(let i = 0 ; i < errors.length ; i++){ %>
                <li class="list-group-item list-group-item-danger my-2">
                  <%= errors[i] %>
                </li>
                <% } %>
              </ul>
              <form
                action="/posts/store"
                method="post"
                enctype="multipart/form-data"
              >
                <div class="form-floating">
                  <input
                    class="form-control"
                    id="title"
                    name="title"
                    type="text"
                    placeholder="Title"
                    value="<%= title %>"
                    data-sb-validations="required"
                  />
                  <label for="title">Title</label>
                  <div
                    class="invalid-feedback"
                    data-sb-feedback="title:required"
                  >
                    A title is required.
                  </div>
                </div>

                <div class="form-floating">
                  <textarea
                    class="form-control"
                    id="body"
                    name="body"
                    placeholder="Description"
                    value="<%= description %>"
                    style="height: 12rem"
                    data-sb-validations="required"
                  ></textarea>
                  <label for="body">Description</label>
                  <script>
                    $(document).ready(function () {
                      $("#body").summernote({
                        placeholder: "Hello bootstrap 4",
                        tabsize: 2,
                        height: 100,
                      });
                    });
                  </script>
                  <div
                    class="invalid-feedback"
                    data-sb-feedback="Description:required"
                  >
                    A description is required.
                  </div>
                </div>
                <br />
                <div class="form-floating">
                  <input
                    class="form-control"
                    id="image"
                    name="image"
                    type="file"
                    value="<%= image %>"
                  />
                </div>
                <br />

                <button
                  class="btn btn-primary text-uppercase"
                  id="submitButton"
                  type="submit"
                >
                  Send
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>
    <%- include('layouts/footer'); %> <%- include('layouts/scripts'); %>
  </body>
</html>
